depends meson
depends pulseaudio
depends xfce4-panel
depends intltool

optional_depends libnotify \
                 "-Dlibnotify=enabled" \
                 "-Dlibnotify=disabled" \
                 "for default pulse audio mixer support"

optional_depends keybinder3 \
                 "-Dkeybinder=enabled" \
                 "-Dkeybinder=disabled" \
                 "for keybinder support"

optional_depends pavucontrol "" "" "for default pulse audio mixer support"
